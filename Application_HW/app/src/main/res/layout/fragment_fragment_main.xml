<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <Button
        android:id="@+id/likeButton"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:text="Like"
        android:textAllCaps="false"
        android:textColor="@color/colorWhite"
        android:textSize="100sp"
        android:background="@drawable/shape_rectangle_pink"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="180dp" app:layout_constraintStart_toStartOf="@+id/unlikeButton"
        android:layout_marginLeft="150dp" android:layout_marginStart="150dp"
        app:layout_constraintEnd_toEndOf="@+id/unlikeButton" app:layout_constraintHorizontal_bias="1.0"/>

    <Button
        android:id="@+id/unlikeButton"
        android:layout_width="500dp"
        android:layout_height="300dp"
        android:text="Unlike"
        android:textAllCaps="false"
        android:textSize="100sp"
        android:background="@drawable/shape_rectangle"
        android:textColor="@color/colorWhite"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="220dp" app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="136dp" android:layout_marginStart="136dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>